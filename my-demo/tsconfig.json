{
  "compilerOptions": {
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      // 允许从没有设置默认导出的模块中默认导入
      "allowSyntheticDefaultImports": true,
      "strictFunctionTypes": false,
      // 启用装饰器
      "experimentalDecorators": true,
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node"
  }
}